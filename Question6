-- Question 6
-- Create an appropriate executable database object to return the Salary for an Employee.
CREATE OR REPLACE PROCEDURE VIEW_SALARY
( 
    P_EMPLOYEE_ID       IN EMPLOYEES_FILE.EMPLOYEE_ID%TYPE,
    P_EMPLOYEE_NAME  IN EMPLOYEES_FILE.EMPLOYEE_NAME%TYPE,
    P_SALARY               IN EMPLOYEES_FILE.SALARY%TYPE
)
IS
  
BEGIN
 SELECT * into P_EMPLOYEE_ID, P_EMPLOYEE_NAME, P_SALARY
 FROM EMPLOYEES_FILE
 WHERE EMPLOYEE_ID = P_EMPLOYEE_ID
 
 dbms_output.put_line (P_EMPLOYEE_ID, P_EMPLOYEE_NAME, P_SALARY)
END; 
/
